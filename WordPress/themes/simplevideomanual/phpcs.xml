<?xml version="1.0"?>
<!-- @see https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards/wiki/Customizable-sniff-properties#global-wp-variable-override-check-in-the-global-namespace -->
<ruleset name="My">
	<rule ref="WordPress">
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
		<exclude name="WordPress.WP.AlternativeFunctions.file_system_read_file_put_contents"/>
		<exclude name="WordPress.VIP"/>
		<exclude name="Squiz.Commenting.InlineComment.InvalidEndChar"/>
	</rule>
	<rule ref="WordPress.VIP.AdminBarRemoval">
		<properties>
			<property name="remove_only" value="false"/>
		</properties>
	</rule>
</ruleset>
